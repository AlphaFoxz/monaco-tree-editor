{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "lib/*",
    "lib/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "dist",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#lib/*": [
        "./lib/*"
      ],
      "#domain/*": [
        "./lib/domain/*"
      ],
      "#domain-plugin/*": [
        "./lib/domain-plugin/*"
      ],
      "#icons/*": [
        "./lib/icons/*"
      ],
      "#components/*": [
        "./lib/components/*"
      ],
      "#pages/*": [
        "./lib/pages/*"
      ]
    },
  }
}