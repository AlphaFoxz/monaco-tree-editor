{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "lib/*",
    "lib/**/*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#lib/*": [
        "./lib/*"
      ],
      "#domain/*": [
        "./lib/domain/*"
      ],
      "#domain-plugin/*": [
        "./lib/domain-plugin/*"
      ],
      "#icons/*": [
        "./lib/icons/*"
      ],
      "#components/*": [
        "./lib/components/*"
      ],
      "#pages/*": [
        "./lib/pages/*"
      ]
    },
  }
}